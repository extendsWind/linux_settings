{
    "git.ignoreMissingGitWarning": true,
/*    "git.path": "C:\\MyProgram\\quick_start\\git.bat", */
    "git.autofetch": true,
    "terminal.external.linuxExec": "fish",
    "terminal.integrated.shell.windows": "bash.exe",
    "terminal.integrated.allowChords": false,


    "vim.insertModeKeyBindings": [
        {
            "before": ["<C-n>"],
            "commands": ["cursorDown"]
        },
        {
            "before": ["<C-p>"],
            "commands": ["cursorUp"]
        }
    ],

    "vim.normalModeKeyBindings": [
        {
            "before": ["<leader>","w"],
            "commands": ["workbench.action.files.newUntitledFile"]
        }
    ],
    "editor.fontFamily": "'WenQuanYi Micro Hei Mono','Droid Sans Mono', monospace, 'Droid Sans Fallback'",
    "zotero.minimizeAfterPicking": true,
    "vim.leader": "<space>",
    "window.zoomLevel": 1,
    "python.linting.pylintArgs": [
     //   "\"--disable=C,R,W, --enable=unreachable,duplicate-key,unnecessary-semicolon,global-variable-not-assigned,unused-variable,binary-op-exception,bad-format-string,anomalous-backslash-in-string,bad-open-mode\""
    ],
    "python.linting.mypyArgs": [
        "--follow-imports=silent",
        "--show-column-numbers"
    ],

    "C_Cpp.updateChannel": "Insiders",
    "python.linting.pylintUseMinimalCheckers": false,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true, 
    "python.linting.flake8Args": ["--max-line-length=248"],
    "python.formatting.provider": "yapf",
    "python.autoUpdateLanguageServer": false
}
